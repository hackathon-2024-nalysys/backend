{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
}